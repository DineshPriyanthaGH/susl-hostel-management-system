# SUSL Hostel Management System - Sevalla Cloud Deployment Configuration
# Copy this to .env and update with your actual values

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
APP_NAME="SUSL Hostel Management System"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-app-name.sevalla.app

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ===========================================
# DATABASE CONFIGURATION (Sevalla Auto-Injected)
# ===========================================
# Sevalla automatically provides these variables when you add MySQL service
# Database name matches your local: susl_hostel_management_system
DB_CONNECTION=mysql
DB_HOST=${DATABASE_HOST}
DB_PORT=${DATABASE_PORT}
DB_DATABASE=susl_hostel_management_system
DB_USERNAME=susl_root
DB_PASSWORD=${DATABASE_PASSWORD}

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DRIVER=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
